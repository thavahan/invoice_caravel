rules_version = "2";
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to create their own user document
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Global collections - allow authenticated users to read/write
    match /master_shippers/{shipperId} {
      allow read, write: if request.auth != null;
    }

    match /master_consignees/{consigneeId} {
      allow read, write: if request.auth != null;
    }

    match /master_product_types/{productTypeId} {
      allow read, write: if request.auth != null;
    }

    // Other global collections
    match /shared_orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    // Explicit rules for specific collections (covered by wildcard above, but explicit for clarity)
    match /users/{userId}/shipments/{shipmentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/drafts/{draftId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/boxes/{boxId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/products/{productId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}